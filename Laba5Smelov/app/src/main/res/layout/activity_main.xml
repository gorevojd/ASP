<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gorevojd.laba5smelov.MainActivity">

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/IDTV" />

    <TextView
        android:text="F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IDTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/FTV" />

    <TextView
        android:text="T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/TTV" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/IDTV"
        android:layout_marginStart="14dp"
        android:id="@+id/id_EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/id_EditText"
        android:layout_alignStart="@+id/id_EditText"
        android:id="@+id/f_EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/f_EditText"
        android:layout_alignStart="@+id/f_EditText"
        android:id="@+id/t_EditText" />

    <Button
        android:text="Insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_EditText"
        android:layout_centerHorizontal="true"
        android:id="@+id/InsertButton" />

    <Button
        android:text="Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InsertButton"
        android:layout_alignStart="@+id/InsertButton"
        android:id="@+id/SelectButton" />

    <Button
        android:text="Select Raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SelectButton"
        android:layout_alignStart="@+id/SelectButton"
        android:id="@+id/SelectRawButton" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SelectRawButton"
        android:layout_alignStart="@+id/SelectRawButton"
        android:id="@+id/UpdateButton" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdateButton"
        android:layout_alignEnd="@+id/UpdateButton"
        android:id="@+id/DeleteButton" />

    <Button
        android:text="DeleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DeleteButton"
        android:layout_alignStart="@+id/DeleteButton"
        android:id="@+id/DeleteAllButton" />

</RelativeLayout>
