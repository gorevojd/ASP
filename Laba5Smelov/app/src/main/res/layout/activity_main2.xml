<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gorevojd.laba5smelov.Main2Activity">


    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/idTextView_2" />

    <TextView
        android:text="T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textTextView_2"
        android:layout_below="@+id/idTextView_2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTextView_2"
        android:layout_toEndOf="@+id/idTextView_2"
        android:layout_marginStart="85dp"
        android:layout_marginTop="18dp"
        android:id="@+id/InsertButton2" />

    <Button
        android:text="Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InsertButton2"
        android:layout_alignStart="@+id/InsertButton2"
        android:id="@+id/SelectButton2" />

    <Button
        android:text="SelectRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SelectButton2"
        android:layout_alignEnd="@+id/SelectButton2"
        android:id="@+id/SelectRawButton2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/idTextView_2"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:id="@+id/idEditText_2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/idEditText_2"
        android:layout_alignStart="@+id/idEditText_2"
        android:id="@+id/tEditText_2" />

    <Button
        android:text="Prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/SelectButton2"
        android:id="@+id/PrevButton" />
</RelativeLayout>
